<Page x:Class="DevTKSS.UnoWebView2App.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DevTKSS.UnoWebView2App.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      xmlns:wv2="using:DevTKSS.UnoWebView2App.Controls"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
    <ScrollViewer IsTabStop="True">
        <Grid RowDefinitions="Auto,Auto,2*,Auto"
              utu:SafeArea.Insets="VisibleBounds"
              RowSpacing="10"
              ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  MaxWidth="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <utu:NavigationBar x:Name="MyNavigationBar"
                               Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2" />

            <!--#region WebView Navigation Controls and Address Bar-->
            <Grid Margin="10" ColumnSpacing="10" x:Name="AddressBarGrid"
                  Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  ColumnDefinitions="Auto,Auto,Auto,Auto,*,Auto">

            <Button x:Name="BackButton"
                    Grid.Column="0"
                    Padding="0"
                    Margin="10,0,0,0"
                    IsEnabled="{x:Bind MyWebView2.CanGoBack,Mode=OneWay}"
                    HorizontalAlignment="Center"
                    Click="BackButton_Click">
                <SymbolIcon Symbol="Back" />
            </Button>
            <Button x:Name="ForwardButton"
                    Grid.Column="1"
                    IsEnabled="{x:Bind MyWebView2.CanGoForward,Mode=OneWay}"
                    HorizontalAlignment="Center"
                    Click="ForwardButton_Click">
                <SymbolIcon Symbol="Forward" />
            </Button>
            <Button x:Name="ReloadButton"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    Click="ReloadButton_Click">
                <SymbolIcon Symbol="Refresh" />
            </Button>
            <Button x:Name="StopButton"
                    Grid.Row="1"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Click="StopButton_Click">
                <SymbolIcon Symbol="Stop" />
            </Button>
            <TextBox x:Name="AddressBar"
                     VerticalAlignment="Center"
                     Grid.Column="4"
                     HorizontalContentAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Text="{Binding Path=CurrentUrl, Mode=OneWay}" />
                <ProgressRing IsActive="{x:Bind Path=WebViewIsNavigating, Mode=OneWay}"
                              Grid.Column="5"
                              Visibility="{x:Bind Path=WebViewIsNavigating, Mode=OneWay, Converter={StaticResource FalseToCollapsedConverter}}" />
            </Grid>
<!--#endregion-->

            <WebView2 x:Name="MyWebView2"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      Grid.Row="2"
                      wv2:WebView2Extensions.NavigatedCommand="{Binding WebNavigationCompleted}"
                      wv2:WebView2Extensions.NavigatingCommand="{Binding WebNavigationStarting}"
                      Source="{Binding Path=CurrentUrl, Mode=TwoWay}" />
            <ListView x:Name="WebViewHistoryEntrys"
                      Grid.Column="0"
                      HorizontalAlignment="Right"
                      Grid.Row="2"
                      ItemsSource="{Binding Path=WebNavigationHistory, Mode=OneWay}" />
            <StackPanel Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Width="250"
                        Margin="10">
                <TextBlock x:Name="NavigationStatusBlock">
                    <Run Text="WebView2 Navigation status: " />
                 <Run Text="{x:Bind Path=WebViewIsNavigating,Mode=OneWay}" />
                </TextBlock>
                <Button Content="Do Something"
                        Command="{Binding DoSomething}"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
